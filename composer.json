{
    "name": "daavelar/laravel-ai",
    "description": "Laravel AI integration for multiple providers",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Diego Avelar",
            "email": "diego@aimatch.fun"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^9.0|^10.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0|^8.0",
        "phpunit/phpunit": "^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "Daavelar\\LaravelAI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Daavelar\\LaravelAI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Daavelar\\LaravelAI\\Providers\\AIServiceProvider"
            ],
            "aliases": {
                "AI": "Daavelar\\LaravelAI\\Facades\\AI"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}